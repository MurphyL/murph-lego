{
    "$schema": "http://json-schema.org/schema",
    "$id": "manifests.json",
    "title": "Manifests",
    "description": "A lego application",
    "type": "object",
    "properties": {
        "routes": {
            "description": "The routes of application",
            "type": "array",
            "minItems": 1,
            "uniqueItems": true,
            "items": {
                "type": "object",
                "properties": {
                    "path": {
                        "type": "string",
                        "format": "uri-reference"
                    }
                },
                "required": [
                    "path"
                ]
            }
        },
        "view": {
            "$ref": "#/$defs/viewProperties"
        }
    },
    "required": [
        "routes"
    ],
    "$defs": {
        "viewProperties": {
            "type": "object"
        }
    }
}