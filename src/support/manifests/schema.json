{
    "$schema": "http://json-schema.org/schema",
    "$id": "manifests.json",
    "title": "Manifests",
    "description": "A lego application",
    "type": "object",
    "properties": {
        "router": {
            "$ref": "#/$defs/routerProperties"
        }
    },
    "required": [
        "router"
    ],
    "$defs": {
        "viewProperties": {
            "type": "object",
            "properties": {
                "component": {
                    "type": "string"
                }
            }
        },
        "routerProperties": {
            "type": "object",
            "properties": {
                "path": {
                    "type": "string",
                    "format": "uri-reference"
                },
                "single": {
                    "type": "boolean"
                },
                "routes": {
                    "description": "The routes of application",
                    "type": "array",
                    "uniqueItems": true,
                    "items": {
                        "type": "object",
                        "properties": {
                            "path": {
                                "type": "string",
                                "format": "uri-reference"
                            },
                            "view": {
                                "$ref": "#/$defs/viewProperties"
                            }
                        },
                        "required": [
                            "path"
                        ]
                    }
                }
            }
        }
    }
}